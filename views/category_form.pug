extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') Category:
      input#name.form-control(type='text', placeholder='category' name='name' value=(category===undefined ? '' : category.name), required='true')
    div.form-group
      label(for='description') Description:
      textarea#description.form-control(type='textarea', placeholder='description' name='description' rows='3' required='true') #{category===undefined ? '' : category.description}
    button.btn.btn-primary(type='submit') Submit

  if errors 
   ul
    for error in errors
     li!= error.msg